<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>


<GridPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.unah.memorymanagement.controller.ColleaguesController">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
   </rowConstraints>
   <AnchorPane prefHeight="489.0" prefWidth="632.0" style="-fx-background-color: #4F5D75;">
      <TextField fx:id="txtSpaceMemory" layoutX="224.0" layoutY="195.0"/>
      <Button layoutX="391.0" layoutY="195.0" mnemonicParsing="false" onAction="#setMemorySize"
              style="-fx-border-radius: 50; -fx-background-color: #EF8354;" text="Establish" textFill="WHITE"/>
      <TextField fx:id="txtProcessSize" layoutX="224.0" layoutY="277.0"/>
      <Button layoutX="223.0" layoutY="327.0" mnemonicParsing="false" onAction="#addProcess"
              style="-fx-background-color: #3c6e71;" text="Assign" textFill="WHITE"/>
      <Button layoutX="298.0" layoutY="327.0" mnemonicParsing="false" onAction="#quitProcess"
              style="-fx-background-color: #ff5e5b;" text="Designate" textFill="WHITE"/>
      <Text fill="WHITE" layoutX="185.0" layoutY="166.0" strokeType="OUTSIDE" strokeWidth="0.0"
            text="Enter the memory size:" textAlignment="CENTER">
         <font>
            <Font name="System Bold" size="18.0"/>
         </font>
      </Text>
      <Text fill="WHITE" layoutX="185.0" layoutY="259.0" strokeType="OUTSIDE" strokeWidth="0.0"
            text="Enter the process size:">
         <font>
            <Font name="System Bold" size="18.0"/>
         </font>
      </Text>
      <Label fx:id="statusMemorySize" layoutX="177.0" layoutY="408.0" prefHeight="27.0" prefWidth="254.0" text="Size:"
             textAlignment="CENTER" textFill="WHITE">
         <font>
            <Font name="JetBrains Mono Medium Nerd Font Complete Mono" size="18.0"/>
         </font>
      </Label>
      <Label fx:id="statusProcessMade" layoutX="175.0" layoutY="370.0" prefHeight="21.0" prefWidth="296.0"
             textAlignment="CENTER" textFill="#fcfcfc">
         <font>
            <Font name="JetBrains Mono Extra Bold Nerd Font Complete" size="15.0"/>
         </font>
      </Label>
      <Label layoutX="184.0" layoutY="66.0" text="Colleague System" textFill="WHITE">
         <font>
            <Font name="JetBrains Mono ExtraBold ExtBd Nerd Font Complete" size="29.0"/>
         </font>
      </Label>
   </AnchorPane>
</GridPane>
